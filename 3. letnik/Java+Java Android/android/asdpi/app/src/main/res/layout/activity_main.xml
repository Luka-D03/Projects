<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#616262"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="410dp"
        android:background="#616262"
        android:height="35dp"
        android:gravity="center"
        android:text="Vnesite številko"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/izpisKlikov"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        android:background="#616262"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:background="#616262"
        android:text="Število"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/izpisKlikov" />

    <TextView
        android:id="@+id/izpisŠtevila"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="64dp"
        android:gravity="center"
        android:text=""
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="#616262"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/izpisKlikov" />

    <EditText
        android:id="@+id/vnos"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:background="#616262"
        android:hint="Vnesite tukaj"
        android:gravity="center"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center"
        android:text="Število pritiskov"
        android:textAlignment="center"
        android:background="#616262"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/vnos" />

    <Button
        android:id="@+id/prišteva"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="število + vrednost števca"
        app:layout_constraintTop_toBottomOf="@+id/izpisŠtevila"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/pomnoži"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="število krat vrednost števca"
        app:layout_constraintTop_toBottomOf="@+id/prišteva"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/ponastavi"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:text="ponastavi na 1 in ponovno vnesi število"
        app:layout_constraintTop_toBottomOf="@+id/pomnoži"
        tools:layout_editor_absoluteX="0dp" />
    +

</androidx.constraintlayout.widget.ConstraintLayout>
