import java.util.Scanner;

public class naloga3 {
//Napiši program, ki prebere 10 števil in izpiše najveèje in najmanjše število. 
//Na intervalu med drugim najveèjim vnesenim številom in najveèjim vnesenim številom sešteje vsako drugo število 
//in izpiše rezultat.

	public static void main(String[] args) {
		try(Scanner vhod = new Scanner(System.in)){
		
			int max = -999999999;
			int min = 999999999;
			int max2 = -999999999;
			int vsota = 0;
			
			for(int i = 1; i <= 10; i++) {	
				System.out.print("Vnesi "+i+". število: ");
				int x = vhod.nextInt();
				
				if (x >= max) 
				{
		            max2 = max;
		            max = x;
				}
				
				if (x < min) 
				{
		            min = x;
				}
			}
			
			for(max2 += 1; max2 <= max; max2 = max2 + 2) {	
				vsota += max2;
			}
			System.out.println("Najveèje število je: "+max);
			System.out.println("Najmanjše število je: "+min);
			System.out.println("Drugo najveèje število je: "+max2);
			System.out.println("Vsota števil je: "+vsota);
		}
	}
}
