package naloge12_5;

import java.util.Scanner;

//Napiši program, ki prebere 12 števil in izpiše tista, ki so deljiva hkrati z 2 in z X.
public class Vaja2 {

	public static void main(String[] args) {
		try(Scanner vhod = new Scanner(System.in)){
			
			for(int i = 1; i <= 12; i++) {
				
				System.out.print("Vnesi "+i+". število: ");
				int x = vhod.nextInt();
				
				if(x % 2 == 0 && x % 5 == 0 && x % 3 != 0) {
					System.out.println("Število "+x+" je deljivo z 2 in s 5 in ni deljivo s 3");
				}
			}
		}
	}
}
